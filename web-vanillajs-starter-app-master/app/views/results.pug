extends template

block content 
    html
      head
        script(src='/js/Chart.js')
      body
        canvas#canvas1
        canvas#canvas2

        script.
            var chrt1 = document.getElementById("canvas1").getContext("2d");
            var data = {
               labels: ["Akshitha", "Braedon", "Ethan", "Humphri", "Noah"],
               datasets: [{
                  label: 'Number of Results',
                  backgroundColor: [
                    "rgba(252, 209, 214, 1)",
                    "rgba(224, 60, 60, 1)",
                    "rgba(160, 64, 78, 1)",
                    "rgba(142, 14, 24, 1)",
                    "rgba(188, 94, 102, 1)"
                  ],
                  borderColor: "rgba(220,220,220,0.8)",
                  hoverBackgroundColor: "rgba(73, 46, 46, 1)",
                  hoverBorderColor: "rgba(220,220,220,1)",
                  data: [11, 24, 16, 27, 22]
                }],
            };
            var options = {
                legend: {
                    position: "bottom"
                },
                title: {
                    display: true,
                    text: "Total Result"
                }
            };
            var totalChart = new Chart(chrt1, {
               type: 'pie',
               data: data,
               options: options
            });

            var chrt2 = document.getElementById("canvas2").getContext("2d");
            var qdata = {
               labels: ["Choice 1", "Choice 2", "Choice 3", "Choice 4", "Choice 5"],
               datasets: [{
                  label: null,
                  backgroundColor: [
                    "rgba(252, 209, 214, 1)",
                    "rgba(224, 60, 60, 1)",
                    "rgba(160, 64, 78, 1)",
                    "rgba(142, 14, 24, 1)",
                    "rgba(188, 94, 102, 1)"
                  ],
                  borderColor: "rgba(220,220,220,0.8)",
                  hoverBackgroundColor: "rgba(73, 46, 46, 1)",
                  hoverBorderColor: "rgba(220,220,220,1)",
                  data: [30, 20, 10, 25, 20]
                }],
            };
            var options = {
                legend: {
                    display: false
                },
                title: {
                    display: true,
                    text: "Total Result for Question 4"
                },
                scales: {
                	yAxes:[{
                		ticks: {
                			beginAtZero: true
                		}
                	}]
                }
            };
            var qChart = new Chart(chrt2, {
               type: 'bar',
               data: qdata,
               options: options
            });